
.voice_bar{
	margin-top: 0.4rem;
  background-color: coral;
  width: 15rem;
  height: 2rem;
  border-radius: 20px;
  padding: 0.2rem;
  display: flex;
  justify-content: space-between;
	min-width: 7rem;
}
.voice_toux ._img{
  height: 2rem;
