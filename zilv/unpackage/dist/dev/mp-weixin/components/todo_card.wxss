.box {
	/* background-color: aquamarine; */
	width: 100%;
	height: 100%;
	display: flex;
	/* flex-flow: row nowrap; */
	align-items: center;
	justify-content: space-evenly;
}
.yinjie {
	width: 5rpx;
	height: 60rpx;
	background-color: #fff;
	border-radius: 10px;
}
@-webkit-keyframes yy{
0% {
		-webkit-transform: scale(1,1);
		        transform: scale(1,1);
		background-color: rgb(255, 255, 255);
}
100% {
		-webkit-transform: scale(1,0.2);
		        transform: scale(1,0.2);
		background-color: rgb(255, 255, 255);
}
}
@keyframes yy{
0% {
		-webkit-transform: scale(1,1);
		        transform: scale(1,1);
		background-color: rgb(255, 255, 255);
}
100% {
		-webkit-transform: scale(1,0.2);
		        transform: scale(1,0.2);
		background-color: rgb(255, 255, 255);
}
}
.one{
	-webkit-animation: yy 0.5s 2s linear infinite alternate;
	        animation: yy 0.5s 2s linear infinite alternate;
}
.two{
	-webkit-animation: yy 0.5s 1.8s linear infinite alternate;
	        animation: yy 0.5s 1.8s linear infinite alternate;
}
.three{
	-webkit-animation: yy 0.5s 1.6s linear infinite alternate;
	        animation: yy 0.5s 1.6s linear infinite alternate;
}
.four{
	-webkit-animation: yy 0.5s 1.4s linear infinite alternate;
	        animation: yy 0.5s 1.4s linear infinite alternate;
}
.five{
	-webkit-animation: yy 0.5s 1.2s linear infinite alternate;
	        animation: yy 0.5s 1.2s linear infinite alternate;
}
.six{
	-webkit-animation: yy 0.5s 1s linear infinite alternate;
	        animation: yy 0.5s 1s linear infinite alternate;
}
.seven{
	-webkit-animation: yy 0.5 0.8s  linear infinite alternate;
	        animation: yy 0.5 0.8s  linear infinite alternate;
}
.eight{
	-webkit-animation: yy 0.5s 0.6s linear infinite alternate;
	        animation: yy 0.5s 0.6s linear infinite alternate;
}
.nine{
	-webkit-animation: yy 0.5s 0.4s linear infinite alternate;
	        animation: yy 0.5s 0.4s linear infinite alternate;
}
.ten{
	-webkit-animation: yy 0.5s 0.2s linear infinite alternate;
	        animation: yy 0.5s 0.2s linear infinite alternate;
}
