
.todo_card {
	height: 3.5rem;
	width: 21rem;
	background-color: rgb(192, 169, 44);
	border-radius: 10px;
	margin-top: 0.8rem;
	display: flex;
	flex-flow:  row nowrap;
	align-items: center;
}
.todo_card ._img {
	height: 1.5rem;
	width: 1.5rem;
	padding-left: 0.5rem;
}
.todo_card text {
	
  display: block;
	width: 80%;
	height: 3.5rem;
	line-height: 3.5rem;
	font-size: 16px; 
  padding-left: 0.5rem; 
	overflow: hidden;
}

